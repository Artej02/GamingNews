@model string
@using Kendo.Mvc.UI

@Html.HiddenFor(m => m)
@Html.ValidationMessageFor(m => m)

<script>
    function success(e) {
        var imagePath = e.response.UserPerformanceDoc;

        $("#UserPerformanceDoc").val(imagePath).trigger("change");
    }
</script>

@(Html.Kendo().Upload()
    .Name("file")
    .Multiple(false)
    .Async(a => a
        .Save("SaveUserPerformanceFile", "Users")
        .AutoUpload(true)
    )
    .Events( e => e.Success("success"))
 )