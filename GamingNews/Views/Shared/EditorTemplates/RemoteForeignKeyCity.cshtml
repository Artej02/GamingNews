@using Kendo.Mvc.UI
@(Html.Kendo().DropDownListFor(m => m)
	 .DataValueField("CityID")
	 .AutoBind(false)
  .DataSource(source =>
  {
	  source.Read(read =>
	  {
		  read.Action("GetCities", "Users").Type(HttpVerbs.Post).Data("dataFuncCity");
	  }).ServerFiltering(true);
  })
  .DataValueField("Key")
  .DataTextField("Value")
  .CascadeFrom("CountryID")
)